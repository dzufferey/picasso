Master(self, router)
  begin
    router ! Work(self);
    router ! Work(self);
    router ! Work(self);
    router ! Work(self);
    select case self ? Result() => ();
    select case self ? Result() => ();
    select case self ? Result() => ();
    select case self ? Result() => ();
    router ! Broadcase(PoisonPill());
    router ! PoisonPill()
  end

Router(self, w1, w2, w3, w4)
  begin
    select
      case self ? Work(from) =>
        begin
          w1 ! Work(from);
          new Router(self, w2, w3, w4, w1)
        end
      case self ? Broadcase(msg) =>
        begin
          w1 ! msg;
          w2 ! msg;
          w3 ! msg;
          w4 ! msg;
          new Router(self, w1, w2, w3, w4)
        end
      case self ? PoisonPill() =>
        ()
  end

Worker(self)
  begin
    var continue := true;
    while continue do
      select
        case self ? Work(from) =>
          from ! Result()
        case self ? PoisonPill() =>
          continue := false
  end

initial
  Master(m, r);
  Router(r, w1, w2, w3, w4);
  Worker(w1);
  Worker(w2);
  Worker(w3);
  Worker(w4)
